<Page x:Class="MentorenAppNeu.Mentoren"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentorenAppNeu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Mentoren">

    <StackPanel Orientation="Horizontal" Background="White">
        <StackPanel Orientation="Vertical" Width="200px" Height="400px">
            <GroupBox Header="Profil"></GroupBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Width="300px" Height="400px" >
            <GroupBox Header="Schüler">
                <ListBox x:Name="MentorList">Hier sollen die Schüler ausgegeben werden, die der Mentor gerade betreut</ListBox>
            </GroupBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Width="300px" Height="400px">
            <GroupBox Header="Schüler-Profil"></GroupBox>
            <GroupBox Header="Schüler-Verlauf"></GroupBox>
        </StackPanel>

    </StackPanel>
</Page>
