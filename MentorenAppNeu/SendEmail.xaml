<Page x:Class="MentorenAppNeu.SendEmail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentorenAppNeu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SendEmail">

    <StackPanel Orientation="Vertical" Background="White">
        <StackPanel HorizontalAlignment="Center">
            <Label Content="Email" FontSize="30" FontWeight="Bold" Foreground="DarkSlateBlue"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content="Empfänger-Email" Width="105" FontWeight="DemiBold"/>
            <TextBox x:Name="recipientEmail" Margin="3" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content="Betreff" Width="105" FontWeight="DemiBold"/>
            <TextBox x:Name="Subject"  Width="250" Margin="3"/>
        </StackPanel>

        <StackPanel Margin="7">
            <TextBox x:Name="EmailBody" Height="150"/>
        </StackPanel>

        <StackPanel>
            <Button Foreground="White" Background="DarkSlateBlue" Width="80" Margin="3" Content="Absenden" Click="SendEmail_Click"/>
        </StackPanel>


    </StackPanel>
</Page>
